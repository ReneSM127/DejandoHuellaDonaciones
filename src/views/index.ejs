<!-- Script -->
<script>
  document.querySelectorAll('.btn-donar').forEach(button => {
    button.addEventListener('click', function() {
      // Obtiene el enlace del atributo 'data-link' del botón
      const link = this.getAttribute('data-link');
      // Configura el evento para el botón de confirmación
      document.getElementById('btnContinuar').onclick = function() {
        window.open(link, '_blank'); // Abre la página en una nueva pestaña
      };
    });
  });
</script>
